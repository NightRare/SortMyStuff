<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.ac.aut.comp705.sortmystuff.ui.search.SearchActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Search" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/search_text_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/search_now_button"
        android:layout_toStartOf="@+id/search_now_button" />
        <requestFocus/>


    <Button
        android:id="@+id/search_now_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/include"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_search_white_48dp"
        android:backgroundTint="@color/colorPrimary" />

    <include layout="@layout/search_list"
        android:layout_below="@+id/search_text_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

</RelativeLayout>
